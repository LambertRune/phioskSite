@model PhioskSite.ViewModels.PhoneVM

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <h1 class="mb-4">Details: @Model.PhoneName</h1>

    <div class="card shadow-sm">
        <div class="row g-0">
            <!-- Afbeelding -->
            <div class="col-md-5">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.PhoneName" style="height: 100%; object-fit: cover;">
            </div>

            <!-- Details -->
            <div class="col-md-7">
                <div class="card-body">
                    <h4 class="card-title">@Model.PhoneName</h4>
                    <p class="card-text"><strong>Brand:</strong> @Model.Brand</p>
                    <p class="card-text"><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
                    <p class="card-text"><strong>Color:</strong> @Model.Color</p>
                    <p class="card-text"><strong>Storage Capacity:</strong> @Model.StorageCapacity GB</p>
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
